<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_logo"
        android:layout_gravity="center" />


    <TextView
        android:id="@+id/providerWelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome 'Provider'"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/addClientButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Client"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/removeClientButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Client"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/viewClientsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Clients"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Settings" />
</LinearLayout>
