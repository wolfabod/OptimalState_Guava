<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/tv_add_client_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Client"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/enter_email_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Client Email"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/et_client_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example@thing.com"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp" />
    <EditText
        android:id="@+id/et_client_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="John Doe"
        android:inputType=""
        android:layout_marginBottom="16dp" />
    <EditText
        android:id="@+id/et_client_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_add_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Add Client" />

    <Button
        android:id="@+id/btn_back_add_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Back"
        android:layout_marginTop="8dp" />
</LinearLayout>
